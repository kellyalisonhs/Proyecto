          <tr>
            <th>Usuario</th>
            <th>Correo electrónico</th>
            <th>Acciones</th>
          </tr>
        </thead>
        
        {{#each list}}
        
        <tr>      
          <td>{{name}}</td>
          <td>{{email}}</td>
          <td><button class="eliminar-btn" onclick="eliminarUsuario('{{name_u}}')">Eliminar</button></td>
        </tr>
        {{/each}}
      </table>
    </div>
  </div>

