            <i class='bx bx-search' id="search-icon"></i> --}}

            <!-- cart icon -->
            <i class='bx bx-heart' id="cart-icon" data-quantity="0"></i>

            <!-- Botón de Cerrar Sesión -->
            <a href="/cerrar-sesion" class="logout-button">Cerrar Sesión</a>

            <!-- cart -->
            <div class="cart">
                <h2 class="cart-title">Tus Personajes Favoritos</h2>
                <!-- contenido -->
                <div class="cart-content"></div>
                <!-- close cart -->
                <i class='bx bx-x' id="close-cart"></i>
                <!-- buy button -->
                <button type="button" class="btn-buy">Guardar</button>
            </div>
        </div>
    </header>
    <!-- productos -->
    <section class="shop container">
        <h2 class="section-title">Selecciona a tus personajes favoritos de Marvel</h2>
        <!-- shop content -->
        <div class="shop-content" id="show-boxes">
            <!-- boxes -->
        </div>

    </section>
